{
  "$schema": "http://json-schema.org/schema",
  "id": "CardSchematics",
  "title": "Card Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the card",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the card?"
    }
  },
  "required": [
    "name"
  ]
}
